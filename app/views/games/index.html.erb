<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Winner</th>
      <th>Ricki</th>
      <th>Thomas</th>
      <th>Winner's Remarks</th>
      <th>Deck Used</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.date %></td>
        <td><%= game.winner %></td>
        <td><%= game.score1 %></td>
        <td><%= game.score2 %></td>
        <td><%= game.comment %></td>
        <td><%= game.deck %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

